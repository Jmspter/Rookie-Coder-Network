<div class="max-w-2xl mx-auto px-4 py-12">
  <% if @certificate.pdf.attached? %>
    <div class="rounded-xl bg-white/10 backdrop-blur-md shadow-lg p-8 text-center border border-white/10">
      <h1 class="text-2xl sm:text-3xl font-bold text-white mb-4">Certificado de Conclusão</h1>
      <p class="text-white/80 mb-6">Seu certificado está pronto para download.</p>
      <%= link_to 'Download do Certificado', download_certificate_path(@certificate),
            class: 'inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition' %>
    </div>
  <% else %>
    <div class="bg-yellow-100 text-yellow-800 border-l-4 border-yellow-500 p-6 rounded-lg shadow-md">
      <p class="mb-4">Seu certificado está sendo gerado. Por favor, atualize a página em alguns instantes.</p>
      <%= button_to 'Atualizar', certificate_path(@certificate), method: :get,
            class: 'bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg transition' %>
    </div>
  <% end %>
</div>
