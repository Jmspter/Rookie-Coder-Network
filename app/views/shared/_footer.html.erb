<footer class="bg-[#4C2E5E] text-white py-8">
  <div class="container mx-auto px-4">
    <!-- Conteúdo principal do footer -->
    <div class="flex flex-col md:flex-row items-center justify-between border-b border-purple-800 pb-6 gap-6">
      <!-- Logo -->
      <%= link_to root_path do %>
      <div class="flex-shrink-0 select-none">
        <%= image_tag "LogoSVG.svg", alt: "Logo Rookie Coder Network", class: "h-10 w-auto" %>
      </div>
      <% end %>

      <!-- Links de navegação -->
      <nav class="flex flex-wrap justify-center gap-6 md:gap-8">
        <%= link_to "About", about_path, class: "hover:text-purple-300 transition-colors duration-200" %>
        <%= link_to "Privacy Policy", privacy_policy_path, class: "hover:text-purple-300 transition-colors duration-200" %>
        <%= link_to "Terms of Use", terms_of_use_path, class: "hover:text-purple-300 transition-colors duration-200" %>
        <%= link_to "Contact", "mailto:rookiecodern@gmail.com", class: "hover:text-purple-300 transition-colors duration-200" %>
      </nav>

      <!-- Redes sociais -->
      <div class="flex-shrink-0">
        <p class="mb-2 text-center md:text-right">Nossas redes</p>
        <div class="flex justify-center md:justify-end gap-3">
          <%= link_to "#", class: "hover:opacity-80 transition-opacity" do %>
            <%= image_tag "icons/instagram.svg", alt: "Instagram", class: "w-8 h-8 rounded-full bg-white p-1" %>
          <% end %>
          <%= link_to "#", class: "hover:opacity-80 transition-opacity" do %>
            <%= image_tag "icons/tiktok.svg", alt: "TikTok", class: "w-8 h-8 rounded-full bg-white p-1" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Direitos autorais -->
    <div class="text-center mt-6 text-sm text-purple-300/80">
      © <%= Time.now.year %> Rookie Coder Network. Todos os direitos reservados.
    </div>
  </div>
</footer>