<%= form_with(model: article, class: "contents") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-900/50 text-red-300 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(article.errors.count, "error") %> impediu este artigo de ser salvo:</h2>
      <ul class="list-disc ml-6">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-4">
    <%= form.label :subject, class: "text-gray-300" %>
    <%= form.text_field :subject, class: "block shadow rounded-md border bg-gray-800 border-gray-600 text-white px-3 py-2 mt-1 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="my-4">
    <%= form.label :title, class: "text-gray-300" %>
    <%= form.text_field :title, class: "block shadow rounded-md border bg-gray-800 border-gray-600 text-white px-3 py-2 mt-1 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="my-4">
    <%= form.label :subtitle, class: "text-gray-300" %>
    <%= form.text_area :subtitle, rows: 3, class: "block shadow rounded-md border bg-gray-800 border-gray-600 text-white px-3 py-2 mt-1 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="my-4">
    <%= form.label :button, class: "text-gray-300" %>
    <%= form.text_field :button, class: "block shadow rounded-md border bg-gray-800 border-gray-600 text-white px-3 py-2 mt-1 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="my-4">
    <%= form.label :button_link, class: "text-gray-300" %>
    <%= form.text_field :button_link, class: "block shadow rounded-md border bg-gray-800 border-gray-600 text-white px-3 py-2 mt-1 w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mt-6">
    <%= form.submit "Salvar", class: "w-full rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer transition-colors" %>
  </div>
<% end %>