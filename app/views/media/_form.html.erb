<%= form_with(model: @medium, url: @medium.new_record? ? course_media_path(@course) : medium_path(@medium), local: true) do |form| %>  <% if @medium.errors.any? %>
    <div class="bg-red-900/30 border border-red-500 text-red-300 px-4 py-3 rounded mb-4">
      <h4 class="font-bold mb-2"><%= pluralize(@medium.errors.count, "erro") %> impediram esta mídia de ser salva:</h4>
      <ul class="list-disc list-inside">
        <% @medium.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: 'block text-gray-200 font-medium mb-1' %>
    <%= form.text_field :title, class: 'w-full bg-gray-800 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :url, class: 'block text-gray-200 font-medium mb-1' %>
    <%= form.text_field :url, placeholder: 'URL do YouTube, PDF ou artigo', class: 'w-full bg-gray-800 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :media_type, class: 'block text-gray-200 font-medium mb-1' %>
    <%= form.select :media_type, options_for_select([['Vídeo', 'video'], ['PDF', 'pdf'], ['Artigo', 'artigo']], @medium.media_type), {}, class: 'w-full bg-gray-800 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500' %>
  </div>

  <div class="flex gap-2">
    <%= form.submit 'Salvar', class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition' %>
    <%= link_to 'Cancelar', course_path(@course), class: 'bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition' %>
  </div>
<% end %>
