<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-teal-600 mb-4"><%= @course.name %></h1>
  <p class="text-slate-700 mb-6"><%= @course.description %></p>

  <h2 class="text-2xl font-semibold text-teal-600 mb-2">Aulas</h2>
  <ul class="list-disc pl-6 space-y-2">
    <% @lessons.each do |lesson| %>
      <li>
        <% if current_user.unlocked?(lesson) || lesson.previous_lesson.nil? %>
          <%= link_to lesson.name, lesson_path(lesson), class: "text-blue-500 hover:underline" %>
        <% else %>
          <span class="text-gray-500"><%= lesson.name %> (Bloqueado)</span>
        <% end %>
              </li>
    <% end %>
  </ul>
</div>
