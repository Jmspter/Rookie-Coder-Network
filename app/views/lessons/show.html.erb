<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-teal-600 mb-4"><%= @lesson.name %></h1>
  <p class="text-slate-700 mb-6"><%= @lesson.description %></p>

    <iframe 
        class="rounded-lg"
        width="100%" 
        height="500" 
        src="https://www.youtube.com/embed/<%= @lesson.video_url %>" 
        frameborder="0" 
        allowfullscreen>
    </iframe>

  <% if @lesson.next_lesson.present? %>
    <%= button_to "Desbloquear próxima aula", unlock_next_lesson_path(@lesson), method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded mt-4" %>
  <% else %>
    <p class="mt-4 text-green-600">Não há mais aulas neste curso.</p>
  <% end %>
</div>
