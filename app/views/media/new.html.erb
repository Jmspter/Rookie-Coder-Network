<div class="max-w-4xl mx-auto px-4">
  <nav aria-label="breadcrumb" class="my-6">
    <ol class="flex items-center text-sm text-gray-400 space-x-2">
      <li>
        <%= link_to 'Modalidades', modalities_path, class: 'hover:text-white transition' %>
        <span class="mx-1">/</span>
      </li>
      <li>
        <%= link_to @course.modality.name, modality_path(@course.modality), class: 'hover:text-white transition' %>
        <span class="mx-1">/</span>
      </li>
      <li>
        <%= link_to @course.name, course_path(@course), class: 'hover:text-white transition' %>
        <span class="mx-1">/</span>
      </li>
      <li class="text-white font-semibold" aria-current="page">Nova Mídia</li>
    </ol>
  </nav>

  <h1 class="text-2xl font-bold text-white mb-6">
    Adicionar Mídia ao Curso <%= @course.name %>
  </h1>

  <%= render 'form' %>
</div>
