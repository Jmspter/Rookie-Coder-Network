<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %> bg-gray-800 border border-gray-700 rounded-lg overflow-hidden shadow-md">
  <% if blob.representable? %>
    <%= image_tag blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [800, 600] : [1024, 768]), class: "w-full h-auto" %>
  <% end %>

  <figcaption class="attachment__caption px-4 py-3 bg-gray-900 text-gray-300">
    <% if caption = blob.try(:caption) %>
      <%= caption %>
    <% else %>
      <span class="attachment__name block font-medium"><%= blob.filename %></span>
      <span class="attachment__size text-sm text-gray-400"><%= number_to_human_size blob.byte_size %></span>
    <% end %>
  </figcaption>
</figure>