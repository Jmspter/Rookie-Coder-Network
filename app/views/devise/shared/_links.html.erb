<%- if controller_name != 'sessions' %>
<%= link_to "Entrar", new_session_path(resource_name), class: "text-teal-400 hover:text-teal-300 underline transition-colors" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to "Criar conta", new_registration_path(resource_name), class: "text-teal-400 hover:text-teal-300 underline transition-colors" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-teal-400 hover:text-teal-300 underline transition-colors" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "text-teal-400 hover:text-teal-300 underline transition-colors" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<%= link_to "Não recebeu instruções para desbloquear?", new_unlock_path(resource_name), class: "text-teal-400 hover:text-teal-300 underline transition-colors" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
<%- resource_class.omniauth_providers.each do |provider| %>
<%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
        data: { turbo: false },
        class: "w-full flex items-center justify-center border border-white/30 hover:border-white/50 text-white py-2 px-4 rounded-full transition-all duration-300 hover:bg-white/5 my-2" %><br />
<% end %>
<% end %>