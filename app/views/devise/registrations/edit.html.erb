<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="text-center mb-12">
    
    <h2 class="text-4xl font-extrabold bg-gradient-to-r from-highlight to-[#9732D4] bg-clip-text text-transparent">
      Editar Perfil
    </h2>
    <p class="text-gray-400 mt-3 text-lg">Atualize suas informações pessoais abaixo</p>
  </div>

  <div class="bg-white/10 border border-white/10 rounded-2xl shadow-xl backdrop-blur-lg p-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Coluna 1 -->
        <div class="space-y-6">
          <div class="space-y-2">
            <%= f.label :username, "Nome Completo", class: "block text-sm font-medium text-gray-300" %>
            <%= f.text_field :username, class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:border-highlight focus:ring-2 focus:ring-highlight/50 transition" %>
          </div>

          <div class="space-y-2">
            <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:border-highlight focus:ring-2 focus:ring-highlight/50 transition" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="p-3 rounded-lg bg-blue-500/20 text-blue-300 text-sm">
              Aguardando confirmação para: <%= resource.unconfirmed_email %>
            </div>
          <% end %>
        </div>

        <!-- Coluna 2 -->
        <div class="space-y-6">
          <div class="space-y-2">
            <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-300" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:border-highlight focus:ring-2 focus:ring-highlight/50 transition" %>
            <p class="text-xs text-gray-400 mt-1">(deixe em branco se não quiser alterar)</p>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-400"><%= @minimum_password_length %> caracteres no mínimo</p>
            <% end %>
          </div>

          <div class="space-y-2">
            <%= f.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-medium text-gray-300" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:border-highlight focus:ring-2 focus:ring-highlight/50 transition" %>
          </div>

          <div class="space-y-2">
            <%= f.label :current_password, "Senha Atual", class: "block text-sm font-medium text-gray-300" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:border-highlight focus:ring-2 focus:ring-highlight/50 transition" %>
            <p class="text-xs text-gray-400 mt-1">(precisamos da sua senha atual para confirmar as alterações)</p>
          </div>
        </div>
      </div>

      <div class="pt-6">
        <%= f.submit "Atualizar", class: "w-full px-4 py-3 rounded-lg bg-highlight hover:bg-[#7ab62b] text-white font-semibold transition duration-300 shadow-md hover:shadow-lg" %>
      </div>
    <% end %>

    <div class="mt-12 pt-6 border-t border-white/10">
      <h3 class="text-lg font-semibold text-gray-300 mb-4">Cancelar minha conta</h3>
      <div class="flex items-center justify-between">
        <p class="text-sm text-gray-400">Não está satisfeito?</p>
        <%= button_to "Cancelar minha conta", registration_path(resource_name),
                      data: { confirm: "Tem certeza? Esta ação não pode ser desfeita." },
                      method: :delete,
                      class: "px-4 py-2 rounded-lg bg-red-500/20 border border-red-400/20 hover:bg-red-500/30 text-red-300 transition duration-300" %>
      </div>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "Voltar", request.referer || root_path, class: "text-highlight hover:underline inline-flex items-center" %>
    </div>
  </div>
</div>

<%= render "shared/particles" %>